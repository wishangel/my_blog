
<div class="row">
<div class = "col-sm-8 col-sm-offset-1">
	<h2>記事一覧</h2>
<% @posts.each do |post|%>
<li>
	<P><%= post.title %></p>
	<p><%= truncate post.body,:length =>50,:omission => '...'%></p>
	
	<p><%= post.category %></p>
	<a><%= link_to '記事の続きはこちら', "/my_blogs/#{post.id}" %></a>
	<%= link_to 'Edit', "/my_blogs/#{post.id}/edit" %></a>
</li>
<% end %>

</div>

	<div class = "col-sm-3"></br>
		<p>Author Name:<%= @author.name %></p>
		<p>Description:<%= @author.description %></p>
		<p>Author Image:<%= @author.image_url %></p>
		<% @recently_posts.each do |f| %>
		<p><%= f.title %></p>
		<% end %>
	</div>
</div>
<div class = "col-md-12 col-md-offset-2">
	<%= paginate @posts %>
</div>




